<div class="d-flex justify-content-center align-content-center pt-3 pb-5">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                {{ form_label(form.username, 'Pseudo', {'class': 'form-label'}) }}
                {{ form_widget(form.username, {
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                {{ form_label(form.firstname, 'Pr√©nom', {'class': 'form-label'}) }}
                {{ form_widget(form.firstname, {
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                {{ form_label(form.lastname, 'Nom', {'class': 'form-label'}) }}
                {{ form_widget(form.lastname, {
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_label(form.email, 'Email', {'class': 'form-label'}) }}
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'form-control '
                }
            }) }}
        </div>
        <div class="col-lg-6">
            {{ form_label(form.birthdate, 'Date de naissance', {'class': 'form-label'}) }}
            {{ form_widget(form.birthdate, {
                'attr': {
                    'class': ''
                }
            }) }}
        </div>
    </div>
    {{ form_widget(form.password) }}
    <div class="row pt-5 justify-content-center">
        <button class="btn btn-outline-success">{{ button_label|default('Inscrivez-vous') }}</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>
