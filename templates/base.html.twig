<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Twitter{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>


<body>
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('dashboard') }}">MicroTwitter</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Actualités</a>
                    </li>
                    {# <li class="nav-item"> #}
                    {# <a class="nav-link" href="#">Features</a> #}
                    {# </li> #}
                </ul>
                    <div class="ml-auto">
                        {% if app.user %}
                                <a href="{{ path('user_profile', {'id': app.user.id}) }}" class="btn btn-outline-light" type="submit">Profil</a>
                                <a href="{{ path('app_logout') }}" class="btn btn-outline-light" type="submit">Se
                                    déconnecter</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-light" type="submit">
                                se connecter</a>
                        {% endif %}
                    </div>
            </div>
        </div>
    </nav>
    {% block page_content %}{% endblock %}
{% endblock %}
<footer class="footer fixed-bottom mt-auto bg-light">
    <div class="container">
        <p class="text-muted">&copy; Assoumani / Amin</p>
    </div>
</footer>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>  
{% block javascripts %}{% endblock %}
</body>
</html>
